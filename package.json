{
  "name": "minicline",
  "displayName": "minicline",
  "description": "A minimal vibe coding extension like cline for VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "minicline-ActivityBar",
          "title": "MiniCline",
          "icon": "assets/icons/icon.svg"
        }
      ]
    },
    "views": {
      "minicline-ActivityBar": [
        {
          "type": "webview",
          "id": "minicline.SidebarProvider",
          "name": "MiniCline"
        }
      ]
    },
    "commands": []
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "protos": "node scripts/build-proto.mjs"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "20.x",
    "@types/vscode": "1.84.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "esbuild": "^0.25.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^5.7.3",
    "vscode-test": "^1.5.0",
    "globby": "^14.0.2",
    "chalk": "5.6.2",
    "grpc-tools": "^1.13.0",
    "ts-proto": "^2.6.1"
  },
  "dependencies": {
    "weather-js": "^2.0.0",
    "@grpc/grpc-js": "^1.9.15"
  }
}